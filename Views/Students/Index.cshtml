@model IEnumerable<Student>

<h2>Students</h2>

<a asp-action="Create">Add Student</a>

<table border="1">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Course</th>
        <th>Actions</th>
    </tr>

@foreach (var s in Model)
{
    <tr>
        <td>@s.Name</td>
        <td>@s.Email</td>
        <td>@s.Course</td>
        <td>
            <a asp-action="Edit" asp-route-id="@s.Id">Edit</a> |
            <a asp-action="Delete" asp-route-id="@s.Id">Delete</a>
        </td>
    </tr>
}
</table>
